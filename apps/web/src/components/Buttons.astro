---
const examples = [
  {
    label: 'Pointer',
    className: 'pointer',
  },
  {
    label: 'Move',
    className: 'move',
  },
  {
    label: 'Loading',
    className: 'loading',
  },
  {
    label: 'Zoom In',
    className: 'zoom-in',
  },
  {
    label: 'Zoom Out',
    className: 'zoom-out',
  },
]
---

<div class='mt-2 table'>
  {
    examples.map((example) => (
      <button
        class={`${example.className} mr-2 mb-2 rounded-md border border-neutral-200 bg-neutral-100/50 px-4 py-2 text-sm dark:border-neutral-800 dark:bg-neutral-900`}
      >
        {example.label}
      </button>
    ))
  }
</div>
